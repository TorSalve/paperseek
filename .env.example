# Environment variables for PaperSeek
# Copy this file to .env and fill in your values

# General settings
ACADEMIC_SEARCH_EMAIL=your.email@example.com
ACADEMIC_SEARCH_USER_AGENT=PaperSeek/0.1.0
ACADEMIC_SEARCH_LOG_LEVEL=INFO

# Default search settings
ACADEMIC_SEARCH_DEFAULT_MAX_RESULTS=100
ACADEMIC_SEARCH_DEFAULT_TIMEOUT=30

# Fallback behavior
ACADEMIC_SEARCH_FALLBACK_MODE=sequential
ACADEMIC_SEARCH_FAIL_FAST=false

# CrossRef settings
ACADEMIC_SEARCH_CROSSREF__ENABLED=true
ACADEMIC_SEARCH_CROSSREF__RATE_LIMIT_PER_SECOND=1.0
ACADEMIC_SEARCH_CROSSREF__TIMEOUT=30
ACADEMIC_SEARCH_CROSSREF__MAX_RETRIES=3

# OpenAlex settings
# Email is automatically used for polite pool access (gets you ~10 req/sec)
# API key is optional for Pro users (premium tier)
ACADEMIC_SEARCH_OPENALEX__ENABLED=true
# ACADEMIC_SEARCH_OPENALEX__API_KEY=your_openalex_api_key  # Optional: Pro users only
ACADEMIC_SEARCH_OPENALEX__RATE_LIMIT_PER_SECOND=5.0  # Conservative for polite pool
ACADEMIC_SEARCH_OPENALEX__TIMEOUT=30
ACADEMIC_SEARCH_OPENALEX__MAX_RETRIES=3

# Semantic Scholar settings
ACADEMIC_SEARCH_SEMANTIC_SCHOLAR__ENABLED=true
ACADEMIC_SEARCH_SEMANTIC_SCHOLAR__API_KEY=your_semantic_scholar_api_key
ACADEMIC_SEARCH_SEMANTIC_SCHOLAR__RATE_LIMIT_PER_SECOND=1.0
ACADEMIC_SEARCH_SEMANTIC_SCHOLAR__RATE_LIMIT_PER_MINUTE=100
ACADEMIC_SEARCH_SEMANTIC_SCHOLAR__TIMEOUT=30
ACADEMIC_SEARCH_SEMANTIC_SCHOLAR__MAX_RETRIES=3

# DOI.org settings
ACADEMIC_SEARCH_DOI__ENABLED=true
ACADEMIC_SEARCH_DOI__RATE_LIMIT_PER_SECOND=2.0
ACADEMIC_SEARCH_DOI__TIMEOUT=30
ACADEMIC_SEARCH_DOI__MAX_RETRIES=3

# PubMed settings
# Email is recommended by NCBI for tracking usage
# API key optional: 10 req/sec with key vs 3 req/sec without
ACADEMIC_SEARCH_PUBMED__ENABLED=true
# ACADEMIC_SEARCH_PUBMED__API_KEY=your_ncbi_api_key  # Optional
ACADEMIC_SEARCH_PUBMED__RATE_LIMIT_PER_SECOND=2.5
ACADEMIC_SEARCH_PUBMED__TIMEOUT=30
ACADEMIC_SEARCH_PUBMED__MAX_RETRIES=3

# arXiv settings
# No API key required
# Rate limiting: 1 request per 3 seconds recommended
ACADEMIC_SEARCH_ARXIV__ENABLED=true
ACADEMIC_SEARCH_ARXIV__RATE_LIMIT_PER_SECOND=0.33
ACADEMIC_SEARCH_ARXIV__TIMEOUT=30
ACADEMIC_SEARCH_ARXIV__MAX_RETRIES=3

# CORE settings
# API key required - register at https://core.ac.uk/services/api
# Free tier: 10,000 requests/day
ACADEMIC_SEARCH_CORE__ENABLED=true
ACADEMIC_SEARCH_CORE__API_KEY=your_core_api_key
ACADEMIC_SEARCH_CORE__RATE_LIMIT_PER_SECOND=2.0
ACADEMIC_SEARCH_CORE__TIMEOUT=30
ACADEMIC_SEARCH_CORE__MAX_RETRIES=3

# Unpaywall settings
# No API key required, but email is required
# Free for non-commercial use - 100,000 requests/day
ACADEMIC_SEARCH_UNPAYWALL__ENABLED=true
ACADEMIC_SEARCH_UNPAYWALL__RATE_LIMIT_PER_SECOND=5.0
ACADEMIC_SEARCH_UNPAYWALL__TIMEOUT=30
ACADEMIC_SEARCH_UNPAYWALL__MAX_RETRIES=3

# DBLP settings
# No API key required
# Be respectful with rate limiting
ACADEMIC_SEARCH_DBLP__ENABLED=true
ACADEMIC_SEARCH_DBLP__RATE_LIMIT_PER_SECOND=2.0
ACADEMIC_SEARCH_DBLP__TIMEOUT=30
ACADEMIC_SEARCH_DBLP__MAX_RETRIES=3
